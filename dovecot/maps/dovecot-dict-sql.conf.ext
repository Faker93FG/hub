connect = host=127.0.0.1 dbname=${DOVECOT_MYSQL_DATABASE} user=${DOVECOT_MYSQL_USER} password=${DOVECOT_MYSQL_PASSWORD}

map {
  pattern = priv/quota/storage
  table = quota2
  username_field = username
  value_field = bytes
}
map {
  pattern = priv/quota/messages
  table = quota2
  username_field = username
  value_field = messages
}