ask_sudo_password

ask RCLONE_REMOTE "blackblaze" "What is the Rclone remote ID?"
ask RCLONE_BUCKET "bucket" "What is the Rclone remote bucket?"
ask RCLONE_FILES_SOURCE "/backup/repository" "What is the source folder to copy from?"

info "Copying $RCLONE_FILES_SOURCE to external bucket $RCLONE_REMOTE:$RCLONE_BUCKET"

rclone copy \
    --progress \
    --transfers 16 \
    "$RCLONE_FILES_SOURCE" \
    "$RCLONE_REMOTE:$RCLONE_BUCKET"
