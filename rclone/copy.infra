infralet ask RCLONE_COPY_SOURCE "/backup/repository" "What is the source folder to copy from?"
infralet ask RCLONE_COPY_DESTIONATION "blackblaze:bucket" "What is the Rclone files destination?"

infralet info "Copying $RCLONE_COPY_SOURCE to external bucket $RCLONE_COPY_DESTIONATION"

rclone copy \
    --progress \
    --transfers 16 \
    "$RCLONE_COPY_SOURCE" \
    "$RCLONE_COPY_DESTIONATION"
