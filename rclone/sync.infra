ask RCLONE_SYNC_FILES_SOURCE "/backup/repository" "What is the source folder to sync from?"
ask RCLONE_SYNC_FILES_DESTIONATION "blackblaze:bucket" "What is the Rclone files destination?"

info "Synchronizing $RCLONE_SYNC_FILES_SOURCE to  $RCLONE_SYNC_FILES_DESTIONATION"

rclone sync \
    --progress \
    --transfers 16 \
    --exclude 'cache/**' \
    "$RCLONE_SYNC_FILES_SOURCE" \
    "$RCLONE_SYNC_FILES_DESTIONATION"